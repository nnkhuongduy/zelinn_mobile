<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Zelinn" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/background</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorSurface">@color/background_surface</item>
        <item name="colorOnSurface">@color/white</item>

        <item name="materialAlertDialogTheme">@style/Theme.Zelinn.AlertDialog</item>
        <item name="materialButtonStyle">@style/Theme.Zelinn.Button</item>
        <item name="textInputStyle">@style/Theme.Zelinn.TextInput</item>
    </style>
</resources>