<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:padding="@dimen/main_space">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/board_menu_title"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/board_menu_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/background_surface"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="@dimen/half_space"
            app:icon="@drawable/ic_close"
            app:iconPadding="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/main_space"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/board_menu_share_btn"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/permission_public"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                app:cornerRadius="15dp"
                app:icon="@drawable/ic_share"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="30dp" />

            <TextView
                android:id="@+id/textView34"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="@string/common_share"
                android:textAlignment="center"
                android:textColor="@color/gray3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/board_menu_invite_btn"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/permission_private"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                app:cornerRadius="15dp"
                app:icon="@drawable/ic_add"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="30dp" />

            <TextView
                android:id="@+id/textView35"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="@string/common_invite"
                android:textAlignment="center"
                android:textColor="@color/gray3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/board_menu_star_btn_unfav"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/gold"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:visibility="gone"
                app:cornerRadius="15dp"
                app:icon="@drawable/ic_star_border"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="30dp" />

            <Button
                android:id="@+id/board_menu_star_btn_fav"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/gold"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:visibility="gone"
                app:cornerRadius="15dp"
                app:icon="@drawable/ic_star"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="30dp" />

            <TextView
                android:id="@+id/textView36"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="@string/board_menu_star"
                android:textAlignment="center"
                android:textColor="@color/gray3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/board_menu_config_btn"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/gray3"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                app:cornerRadius="15dp"
                app:icon="@drawable/ic_edit"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="30dp" />

            <TextView
                android:id="@+id/textView37"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="@string/common_config"
                android:textAlignment="center"
                android:textColor="@color/gray3" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/half_space"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView38"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/members"
            android:textColor="@color/gray3" />

        <Button
            android:id="@+id/board_menu_members_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/background"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="@dimen/half_space"
            android:text="@string/common_to_detail"
            android:textColor="@color/primary"
            android:textSize="14sp"
            app:icon="@drawable/ic_chevron_right"
            app:iconGravity="textEnd"
            app:iconPadding="0dp"
            app:iconTint="@color/primary" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/half_space"
        app:cardBackgroundColor="@color/background_surface"
        app:cardCornerRadius="15dp"
        app:contentPadding="@dimen/half_space">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/board_menu_member_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:scrollbars="horizontal"
            tools:itemCount="1"
            tools:listitem="@layout/fragment_user_avatar" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/board_menu_info_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/half_space"
        android:clickable="true"
        android:focusable="auto"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/background_surface"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/half_space">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/permission_public"
                app:cardCornerRadius="6dp">

                <ImageView
                    android:id="@+id/create_card_start_time_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    app:srcCompat="@drawable/ic_error" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView39"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/half_space"
                android:layout_weight="1"
                android:text="@string/board_menu_info"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/create_card_start_time_image_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0"
                app:srcCompat="@drawable/ic_chevron_right"
                app:tint="@color/gray3" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>