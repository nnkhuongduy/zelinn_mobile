<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/half_space"
    android:layout_marginBottom="@dimen/half_space"
    android:backgroundTint="@color/background_surface"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/background_surface"
        app:cardCornerRadius="@dimen/border_radius">

        <LinearLayout
            android:id="@+id/home_board_item_layout_view"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/half_space"
            android:paddingTop="@dimen/half_space"
            android:paddingEnd="@dimen/half_space"
            android:paddingBottom="@dimen/half_space">

            <ImageView
                android:id="@+id/homepage_board_item_image"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_weight="0" />

            <TextView
                android:id="@+id/homepage_board_item_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/main_space"
                android:layout_weight="1"
                android:text="board_title"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:srcCompat="@drawable/ic_keyboard_arrow_right"
                app:tint="@color/white" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>